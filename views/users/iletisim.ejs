

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/libs/bootstrap/dist/css/bootstrap.min.css">
    <title>Asansör Firması Müşteri Arayüzü</title>
</head>
<body>
<!-- Navbar -->
<%- include('../partials/nav') %>

<!-- Ana İçerik -->
<div class="container mt-3">
    <div class="row">
        <div class="col-md-3">
            <div class="list-group">
                <a href="/hizmetler" class="list-group-item list-group-item-action">Hizmetler</a>
                <a href="/referanslar" class="list-group-item list-group-item-action">Referanslar</a>
                <a href="/iletisim" class="list-group-item list-group-item-action active">İletişim</a>
            </div>
        </div>
        <div class="col-md-9">
                <div class="row justify-content-center">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header bg-primary text-white text-center">
                                <h4>İletişim Formu</h4>
                            </div>
                            <div class="card-body">
                                <form>
                                    <div class="form-group">
                                        <label for="name">Adınız:</label>
                                        <input type="text" class="form-control" id="name" placeholder="Adınız" required>
                                    </div>
                            
                                    <div class="form-group">
                                        <label for="email">E-posta Adresiniz:</label>
                                        <input type="email" class="form-control" id="email" placeholder="E-posta adresiniz" required>
                                    </div>
                            
                                    <div class="form-group">
                                        <label for="subject">Konu:</label>
                                        <input type="text" class="form-control" id="subject" placeholder="Konu" required>
                                    </div>
                            
                                    <div class="form-group">
                                        <label for="message">Mesajınız:</label>
                                        <textarea class="form-control" id="message" rows="4" placeholder="Mesajınız" required></textarea>
                                    </div>
                            
                                    <button type="submit" class="btn btn-primary">Gönder</button>
                                </form>
                            </div>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Footer -->
<%- include('../partials/footer') %>

</body>