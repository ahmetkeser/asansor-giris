<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include('../partials/head',{pagetitle}) %>
</head>
<body>
<!-- Navbar -->
    <%- include('../partials/nav') %> <!--ejsinc ile partials dosyasındaki parçayı çağırıyoruz. -->

<!-- Ana İçerik -->
    <div class="container mt-3">
        <div class="row">
            <div class="col-md-12 mt-3">
                <form method="post">
                    <input type="hidden" name="hizmetid" value="<%= gelen.hizmetid%>">
                    <div class="row mb-3">
                        <label for="baslik" class="col-sm-2 col-form-label">Başlık</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="baslik" name="baslik" value="<%=gelen.hizmettitle%>">
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="aciklama" class="col-sm-2 col-form-label">Açıklama</label>
                        <div class="col-sm-8">
                            <textarea name="aciklama" rows="10" class="form-control"><%= gelen.hizmettext%></textarea>
                        </div>
                    </div>
                    <div class="row mb-3">
                        <label for="resim" class="col-sm-2 col-form-label">Resim</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="resim" name="resim" value="<%= gelen.hizmetresim%>">
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-sm-8 offset-sm-2">
                            <button type="submit" class="btn btn-success col-md-12">GÜNCELLE</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

<!-- Footer -->
<%- include('../partials/footer') %>

</body>
</html>