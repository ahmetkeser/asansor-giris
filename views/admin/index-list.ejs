<!DOCTYPE html>
<html lang="tr">
<head>
    <%- include('../partials/head') %>
</head>
<body>
<!-- Navbar -->
    <%- include('../partials/nav') %> <!--ejsinc ile partials dosyasındaki parçayı çağırıyoruz. -->

<!-- Ana İçerik -->
<div class="container mt-3">
    <div class="row">
        <div class="col-md12 mt-3">
            <table class="table table-bordered table-striped">
                <tr><a class="btn btn-l btn-success col-md-3" href="/admin/index-add">+ Anasayfa Yeni Bilgi Ekle +</a></tr>
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Başlık</th>
                        <th>İçerik</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    <%gelen.forEach(element =>{ %>
                        <tr>
                            <td>#<%= element.textid %></td>
                            <td><%= element.title %></td>
                            <td><%= element.text %></td>
                            <td>
                                <a class="btn btn-sm btn-primary col-md-12 " href="/admin/index-edit/<%=element.textid%>" name="">Edit</a>
                                <a class="btn btn-sm btn-danger col-md-12" href="/admin/index-delete/<%=element.textid%>" name="">Delete</a>
                            </td>
                        </tr>
                    <% }) %>
                    
                </tbody>
            </table>
        </div>
    </div>
</div>
<!-- Footer -->
<%- include('../partials/footer') %>

</body>
</html>